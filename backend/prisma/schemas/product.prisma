model Product {
    id          Int     @id @default(autoincrement())
    name        String
    description String?
    price       Float
    stock       Int     @default(0)
    image       String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    category_id Int
    category    Category @relation(fields: [category_id], references: [id])
    
    cartItem    CartItem[]

    orderItem OrderItem[]
    wishlist  WishlistItem[]
    review    Review[]

    @@schema("product")
}

model Category {
    id        Int       @id @default(autoincrement())
    name      String
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    product   Product[]

    @@schema("product")
}
